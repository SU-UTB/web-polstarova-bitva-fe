---
import { Image } from 'astro:assets';
import image from '../../../images/home/hero.png';
---

<section
  class="mx-auto flex flex-col items-center justify-between px-4 pb-16 pt-32 md:h-[calc(100vh-104px)] md:px-6 md:py-8 lg:h-[calc(100vh-136px)] lg:max-w-6xl lg:px-8"
>
  <h1 class="flex flex-grow items-center justify-center pb-16">
    <Image class="w-full" src={image} alt="Největší polštářová bytva" loading="eager" />
  </h1>
  <a
    href="/#info"
    title="Více informací"
    class="relative mx-auto block w-fit animate-[bounce_1000ms_infinite_3s] rounded-full bg-primary-600 p-3 text-primary-100 shadow-lg shadow-primary-600/20 transition duration-300 hover:text-white hover:shadow-xl hover:shadow-primary-600/30"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="2"
      stroke="currentColor"
      class="relative h-8 w-8"
    >
      <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 13.5 12 21m0 0-7.5-7.5M12 21V3"></path>
    </svg>
  </a>
</section>
