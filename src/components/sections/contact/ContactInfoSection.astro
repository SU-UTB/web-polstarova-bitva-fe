---
import { Container, Text } from '@components/atoms';
import { Icon } from '@components/atoms/Icon';
import SedlarImage from '@images/kontakt/david.jpeg';
import VyhnalkovaImage from '@images/kontakt/lea.jpg';
import { Image } from 'astro:assets';

const people = [
  {
    name: 'Leona Vyhnálková',
    role: 'Manažerka projektu',
    subrole: 'Program a komunikace',
    email: 'vyhnalkova@sutb.cz',
    image: VyhnalkovaImage,
  },
  {
    name: 'David Sedlář',
    role: 'Manažer projektu',
    subrole: 'Partnerské spolupráce',
    email: 'sedlar@sutb.cz',
    image: SedlarImage,
  },
];
---

<section class="py-16 md:py-24 lg:py-32">
  <Container>
    <h1 class="mb-4 text-4xl font-bold leading-snug text-gray-950 sm:text-5xl md:text-6xl lg:mb-6 lg:text-7xl">
      Kontakt
    </h1>
    <Text>
      Rádi byste navázali spolupráci? Něco byste změnili? Máte dotaz? <br />
      <strong class="font-semibold text-gray-950"
        >Naši hvězdní manažeři jsou vám k dispozici, neváhejte se nám ozvat!</strong
      >
    </Text>
    <ul class="mx-auto grid max-w-sm gap-x-12 gap-y-16 pt-16 sm:max-w-none sm:grid-cols-2">
      {
        people.map((person) => (
          <li class="group relative  flex flex-col items-center px-2 text-center sm:items-start  sm:text-left">
            {person.image && (
              <Image
                src={person.image}
                class="h-32 w-32 rounded-full object-cover object-top shadow-xl shadow-primary-800/30 sm:h-48 sm:w-48 lg:h-56 lg:w-56"
                alt=""
              />
            )}
            <hgroup class="mb-2">
              <h2 class="pt-4 text-xl font-bold tracking-wide text-stone-800 md:pt-5 md:text-2xl lg:text-3xl">
                {person.name}
              </h2>
              <p class="font-medium uppercase tracking-wider text-primary-600 lg:text-lg">{person.role}</p>
            </hgroup>
            <p class="font-medium text-gray-800 lg:text-lg">{person.subrole}</p>
            <a
              class="mt-2 flex items-center  justify-start py-1 font-medium text-stone-600 transition duration-300 hover:text-primary-600 md:text-lg lg:text-xl"
              href={`mailto:${person.email}`}
            >
              <Icon name="mail" className="w-5 h-5 mr-2.5" />
              <span>{person.email}</span>
            </a>
          </li>
        ))
      }
    </ul>
  </Container>
</section>
