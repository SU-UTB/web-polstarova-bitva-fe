---
import { Container, H2 } from '@components/atoms';
import Clock from '@components/atoms/Characters/Clock.astro';

const items = [
  { time: '13:30', title: 'Začátek doprovodného programu' },
  { time: '14:00', title: 'Promítání bloku dětských animovaných filmů' },
  { time: '15:00', title: 'Přednáška č. 1' },
  { time: '15:30', title: 'Počítání účastníků' },
  { time: '16:00', title: 'Začátek Největší polštářové Bytvy v ČR' },
  { time: '16:30', title: 'Přednáška č. 1' },
  { time: '17:00', title: 'Ukončení akce' },
];
---

<section class="py-16 md:py-24 lg:py-32">
  <Container>
    <div class="grid md:grid-cols-3">
      <div class="md:col-span-2">
        <H2>Harmonogram bytvy</H2>
        <div class="pl-2 sm:pl-4">
          <ol class="relative space-y-6 sm:space-y-8 md:space-y-10">
            <div class="absolute flex h-full items-center justify-center">
              <div class="h-[calc(94%)] border-l-2 border-dark-900"></div>
            </div>
            {
              items.map((item) => (
                <li class="pl-6">
                  <div class="absolute -start-[7px] mt-1 h-4 w-4 rounded-full border border-dark-900 bg-dark-900 " />
                  <div class="flex gap-4">
                    <time datetime={item.time} class="text-xl font-bold tracking-wide text-dark-800">
                      {item.time}
                    </time>
                    <h3 class="text-lg font-medium text-gray-900">{item.title}</h3>
                  </div>
                </li>
              ))
            }
          </ol>
        </div>
      </div>
      <div class="flex items-end justify-center pt-12 lg:pt-0">
        <Clock class="w-1/2 md:w-auto lg:h-96 lg:w-auto" />
      </div>
    </div>
  </Container>
</section>
