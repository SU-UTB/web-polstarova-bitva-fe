---
import { Image } from 'astro:assets';
import Layout from '../components/Layout.astro';
import { Container } from '../components/atoms/Container';
import { Icon } from '../components/atoms/Icon';
import SedlarImage from '../images/sedlar.png';
import VyhnalkovaImage from '../images/vyhnalkova.png';

const metaTags = {
  title: 'Největší polštářová bitva v ČR',
  description: 'Největší polštářová bitva v České Republice, pořádaná v roce 2024',
};

const people = [
  {
    name: 'Leona Vyhnálková',
    role: 'Manažerka projektu',
    subrole: 'Program a komunikace',
    email: 'vyhnalkova@sutb.cz',
    image: VyhnalkovaImage,
  },
  {
    name: 'David Sedlář',
    role: 'Manažer projektu',
    subrole: 'Partnerské spolupráce',
    email: 'sedlar@sutb.cz',
    image: SedlarImage,
  },
];
---

<Layout {...metaTags}>
  <section class="py-16 md:py-24 lg:py-32">
    <Container>
      <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold text-gray-950 mb-4 lg:mb-6 leading-snug">
        Kontakt
      </h1>
      <p class="sm:text-lg lg:text-xl sm:leading-[1.75] lg:leading-[1.75] text-gray-900">
        Rádi byste navázali spolupráci? Něco byste změnili? Máte dotaz? <br />
        <strong class="font-medium">Naši hvězdní manažeři jsou vám k dispozici, neváhejte se nám ozvat!</strong>
      </p>
      <ul class="pt-16 md:pt-24 grid sm:grid-cols-2 gap-x-12 gap-y-16 max-w-sm sm:max-w-none mx-auto">
        {
          people.map((person) => (
            <li class="px-2 relative  group flex flex-col items-center sm:items-start">
              {person.image && (
                <Image src={person.image} class="h-32 sm:h-48 w-32  sm:w-48 rounded-full shadow-lg" alt="" />
              )}
              <hgroup class="mb-2">
                <h2 class="text-xl md:text-2xl lg:text-3xl font-bold tracking-wide text-stone-800 pt-4 md:pt-5">
                  {person.name}
                </h2>
                <p class="text-primary-600 lg:text-lg font-medium uppercase tracking-wider">{person.role}</p>
              </hgroup>
              <p class="font-medium lg:text-lg text-gray-800">{person.subrole}</p>
              <a
                class="mt-2 md:text-lg lg:text-xl  font-medium py-1 text-stone-600 flex justify-start items-center hover:text-primary-600 transition duration-300"
                href={`mailto:${person.email}`}
              >
                <Icon name="mail" className="w-5 h-5 mr-2.5" />
                <span>{person.email}</span>
              </a>
            </li>
          ))
        }
      </ul>
    </Container>
  </section>
</Layout>
