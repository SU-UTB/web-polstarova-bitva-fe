---
import Layout from '../components/Layout.astro';
import { Container } from '../components/atoms/Container';
import IntroSection from '../components/sections/partners/IntroSection.astro';
import { PricingSection } from '../components/sections/partners/PricingSection';

const metaTags = {
  title: 'Největší polštářová bitva v ČR',
  description: 'Největší polštářová bitva v České Republice, pořádaná v roce 2024',
};
---

<Layout {...metaTags}>
  <IntroSection />
  <PricingSection client:load />
  <section class="pb-16 md:pb-24 lg:pb-32">
    <Container>
      <h2 class="font-bold text-3xl sm:text-4xl md:text-5xl lg:text-6xl mb-4 lg:mb-8 leading-snug text-gray-950">
        Co je to polštářová bitva?
      </h2>
      <div class="max-w-4xl">
        <p class="sm:text-lg lg:text-xl sm:leading-[1.75] lg:leading-[1.75] text-gray-900 font-medium mb-4 lg:mb-6">
          Polštářová Bitva je projekt, který pořádá nezisková organizace Studentská unie UTB, působící pod Univerzitou
          Tomáše Bati ve Zlíně.
        </p>
        <p class="sm:text-lg lg:text-xl sm:leading-[1.75] lg:leading-[1.75] text-gray-900 font-medium mb-4 lg:mb-6">
          V rámci našeho projektu se budeme snažit překonat národní rekord v největší polštářové bitvě, ale také
          vytvořit nezapomenutelné zážitky a posílit pouta mezi všemi účastníky.
        </p>
        <p class="sm:text-lg lg:text-xl sm:leading-[1.75] lg:leading-[1.75] text-gray-900 font-medium">
          Přidejte se k nám, vezměte polštáře a buďte součástí této jedinečné události!
        </p>
      </div>
    </Container>
  </section>
</Layout>
