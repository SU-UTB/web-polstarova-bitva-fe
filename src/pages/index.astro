---
import Layout from '@components/Layout.astro';
import { Container } from '@components/atoms';
import AboutSection from '@components/sections/home/AboutSection.astro';
import AttendeesInfoSection from '@components/sections/home/AttendeesInfoSection.astro';
import HeroSection from '@components/sections/home/HeroSection.astro';
import InfoSection from '@components/sections/home/InfoSection.astro';
import LastEventSection from '@components/sections/home/LastEventSection.astro';
import PartnerInfoSection from '@components/sections/home/PartnerInfoSection.astro';

const metaTags = {
  title: 'Největší polštářová bitva v ČR | Zlín 20.4.2024',
  description:
    'Připravte se na nekonečnou porci zábavy, vzrušení a adrenalinu, protože se chystáme zaznamenat nový rekord v počtu polštářových bojovníků na jednom místě. Tato událost je otevřena všem, bez ohledu na věk, pohlaví nebo zkušenosti.',
  image: '/meta-image.jpg',
};
---

<Layout {...metaTags}>
  <HeroSection />
  <InfoSection />
  <section class="py-16 md:py-24 lg:py-32" id="proc-bytva">
    <Container>
      <div
        class="mx-auto w-fit rounded-xl bg-gradient-to-br from-primary-500 to-primary-700 px-6 pb-12 pt-7 shadow-xl shadow-primary-800/20 sm:px-8 md:px-12"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          class="mb-6 h-12 w-12 text-primary-50 md:mx-auto"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M9.879 7.519c1.171-1.025 3.071-1.025 4.242 0 1.172 1.025 1.172 2.687 0 3.712-.203.179-.43.326-.67.442-.745.361-1.45.999-1.45 1.827v.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9 5.25h.008v.008H12v-.008Z"
          ></path>
        </svg>
        <h2 class="text-xl font-bold text-white md:text-center md:text-2xl lg:text-3xl">
          Y ve slově “bytva” je schválně, nebo jste se jen špatně učili?
        </h2>
        <p class="mt-4 max-w-3xl font-medium leading-relaxed text-primary-100 md:mx-auto md:text-center md:text-lg">
          Sice netvrdíme, že se učíme dobře, ale Y píšeme ve slově “bytva” naprosto záměrně. Zaujalo vás to? Hmm, tak to
          jsme to asi vymysleli dobře. :)
        </p>
      </div>
    </Container>
  </section>
  <AboutSection />
  <AttendeesInfoSection />
  <PartnerInfoSection />
  <LastEventSection />
</Layout>
